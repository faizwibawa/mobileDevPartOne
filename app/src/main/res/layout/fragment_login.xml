<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rh8up1sm1vhd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r1yl04mwrpe3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rk7lrc010q5q"
                    android:textColor="#795643"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="First, Sign Up"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rqyafl2jmsbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="42dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rducccyu9obg"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/vector"
                    android:scaleType="fitXY"
                    />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ro3m31gdre5p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="42dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ry1htl0l5ma"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/vector"
                    android:scaleType="fitXY"
                    />
                <EditText
                    android:id="@+id/etPassword"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnsignup"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="123dp"
                android:orientation="vertical"
                android:background="@drawable/signupbut"
                android:paddingVertical="15dp"
                android:paddingHorizontal="27dp"
                android:layout_marginHorizontal="100dp"
                android:clickable="true"
                android:focusable="true"
                />
            <TextView
                android:id="@+id/rjkem0q1kr5s"
                android:textColor="#795643"
                android:textSize="22sp"
                android:layout_marginHorizontal="25dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Already have an account?"
                />
            <LinearLayout
                android:id="@+id/r4qf36apzak4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="112dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/rckjiprhu6xi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/loginbut"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="44dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                </Button>
            </LinearLayout>
            <TextView
                android:id="@+id/r4todwkpzfbq"
                android:textColor="#795643"
                android:textSize="13sp"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="47dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Or try our (not working) other login option"
                />
            <LinearLayout
                android:id="@+id/rm7cv76gq5nt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="88dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rpjaq6kzizdq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rx0iu7zexwnc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/googlebut"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:id="@+id/r2wnk5c9qafv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/fesnuk"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
